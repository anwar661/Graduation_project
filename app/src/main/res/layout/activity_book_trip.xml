<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book_trip">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/b1"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select The Region"
        android:fontFamily="serif"
        android:textColor="#405D61"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Region"
        android:fontFamily="serif"
        android:textColor="#405D61"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select The Start Point"
        android:fontFamily="serif"
        android:layout_marginLeft="30dp"
        android:textColor="#405D61"
        android:layout_marginTop="120dp"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Start Point"
        android:fontFamily="serif"
        android:textColor="#405D61"
        android:layout_marginTop="140dp"/>
    <TextView
        android:id="@+id/textview6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:textColor="#405D61"
        android:layout_marginLeft="30dp"
        android:text="Select The Rally point"
        android:layout_marginTop="190dp"/>
    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rally point"
        android:fontFamily="serif"
        android:textColor="#405D61"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="210dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select The Time to Go"
        android:fontFamily="serif"
        android:textColor="#405D61"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="260dp"/>

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time to Go"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="serif"
        android:textColor="#405D61"
        android:layout_marginTop="280dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select The End Point"
        android:fontFamily="serif"
        android:textColor="#405D61"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="330dp"/>

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Access Point"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="serif"
        android:textColor="#405D61"
        android:layout_marginTop="350dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:fontFamily="serif"
        android:layout_marginLeft="30dp"
        android:textColor="#405D61"
        android:text="Select The Number of Passengers" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="number of passengers"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="serif"
        android:textColor="#405D61"
        android:layout_marginTop="420dp"/>

    <Button
        android:id="@+id/bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:background="#B5DCE2"
        android:text="Book a Trip"
        android:onClick="tv"
        android:fontFamily="serif"
        android:textColor="#F2747171" />
</RelativeLayout>
