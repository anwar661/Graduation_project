<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_trip">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ch"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select The Region"
        android:fontFamily="serif"
        android:textColor="#F2161515"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Region"
        android:fontFamily="serif"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select The Start Point"
        android:fontFamily="serif"
        android:textColor="#F2161515"
        android:layout_marginTop="100dp"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Point"
        android:fontFamily="serif"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select The Time to Go"
        android:fontFamily="serif"
        android:textColor="#F2161515"
        android:layout_marginTop="200dp"/>

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time to Go"
        android:fontFamily="serif"
        android:layout_marginTop="220dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select The Access Point"
        android:fontFamily="serif"
        android:textColor="#F2161515"
        android:layout_marginTop="300dp"/>

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Access Point"
        android:fontFamily="serif"
        android:layout_marginTop="320dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:textColor="#F2161515"
        android:text="Select The Number of Passengers"
        android:layout_marginTop="400dp"/>

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="number of passengers"
        android:fontFamily="serif"
        android:layout_marginTop="420dp"/>


    <EditText
        android:id="@+id/edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Type of Car"
        android:fontFamily="serif"
        android:textIsSelectable="false"/>

    <EditText
        android:id="@+id/edt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="car color"
        android:fontFamily="serif"
        android:textIsSelectable="false"/>

    <EditText
        android:id="@+id/edt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Plate Number"
        android:fontFamily="serif"
        android:textIsSelectable="false" />
    <Button
        android:id="@+id/ct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a Trip"
        android:layout_marginTop="620dp"
        android:background="#B5DCE2"
        android:fontFamily="serif"
        android:onClick="req"
        android:textColor="#F2747171"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
