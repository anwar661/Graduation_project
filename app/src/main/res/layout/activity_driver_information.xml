<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Driver_information">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ch"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Driver information"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:id="@+id/info"
        android:textColor="#807A7A"
        android:layout_marginTop="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_margin="16dp"
        android:layout_below="@id/info"
        android:text="Name"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_margin="16dp"
        android:layout_below="@id/name"
        android:text="Phone"
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_margin="16dp"
        android:layout_below="@id/phone"
        android:text="car"
        android:id="@+id/car_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_margin="16dp"
        android:layout_below="@id/car_type"
        android:text="car color"
        android:id="@+id/car_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_margin="16dp"
        android:layout_below="@id/car_color"
        android:text="car number"
        android:id="@+id/car_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:layout_below="@id/car_number"
        android:paddingRight="16dp"
      >

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:text="Chat"
            android:fontFamily="serif"
            android:background="#B5DCE2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="Call"
            android:fontFamily="serif"
            android:background="#B5DCE2"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
